{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Work Order Checker",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": ["${workspaceFolder}/main.py", "${workspaceFolder}/sample_data/"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Work Order Checker - Custom Files",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": ["${workspaceFolder}/main.py", "${input:workOrderFiles}"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/pip",
            "args": ["install", "-r", "requirements.txt"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "workOrderFiles",
            "description": "Work order files or directory to check",
            "default": "./sample_data/",
            "type": "promptString"
        }
    ]
}